{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
  },
  "include": ["./*.ts", "./.*.ts", "./*.js", "./.*.js", "./*.mjs", "./.*.mjs"],
  "exclude": ["src", "node_modules"],
}
